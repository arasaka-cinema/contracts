{
	"name": "@arasaka-cinema/contracts",
	"version": "1.0.6",
	"description": "Protobuf definitions and generated TypeScript types for Arasaka Cinema",
	"main": "./dist/src/index.js",
	"types": "./dist/src/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"default": "./dist/src/index.js"
		},
		"./gen/*": {
			"types": "./dist/gen/*.d.ts",
			"default": "./dist/gen/*.js"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arasaka-cinema/contracts"
	},
	"scripts": {
		"generate": "protoc -I ./proto ./proto/*.proto --ts_proto_out=./gen --ts_proto_opt=nestJs=true,package=omit",
		"build": "tsc -p ./tsconfig.build.json",
		"format": "prettier --write \"src/**/*.ts\""
	},
	"files": [
		"gen",
		"proto",
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@arasaka-cinema/core": "^1.0.4",
		"@nestjs/microservices": "^11.1.12",
		"rxjs": "^7.8.2",
		"ts-proto": "^2.11.1"
	},
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^6.0.2",
		"@types/node": "^25.1.0",
		"prettier": "^3.8.1",
		"typescript": "^5.9.3"
	}
}
